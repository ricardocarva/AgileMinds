@page "/wiki/scrum-vs-kanban"

@inject NavigationManager Navigation
@inject ISnackbar Snackbar

<MudPaper Class="px-6 py-6 ma-4" Elevation="4">
    <!-- Breadcrumb Navigation -->
    <MudBreadcrumbs Items="_breadcrumbItems" Class="mb-4">
        <ItemTemplate Context="item">
            <MudLink Href="@item.Href" Disabled="@item.Disabled">@item.Text.ToUpper()</MudLink>
        </ItemTemplate>
    </MudBreadcrumbs>

    <!-- Header with Color Accent -->
    <MudStack Row="true" AlignItems="AlignItems.End" Spacing="1">
        <MudIcon Icon="@Icons.Material.Filled.Compare" Class="mb-4 align-bottom" Color="Color.Primary" />
        <MudText Typo="Typo.h3" Color="Color.Primary">Methodology Comparison</MudText>
    </MudStack>
    <MudText Typo="Typo.h4" Class="mt-4">Scrum vs. Kanban</MudText>
    <MudText Typo="Typo.body1" Class="mb-4">
        Scrum and Kanban are both popular frameworks within Agile, aimed at improving efficiency and delivering value incrementally.
    </MudText>

    <!-- MudGrid with Two Columns -->
    <MudGrid Justify="Justify.SpaceBetween" Class="mb-4">
        <!-- Scrum Column -->
        <MudItem xs="12" md="6">
            <MudText Typo="Typo.h5" Class="mb-2">Scrum Methodology</MudText>
            <MudList T="string" Class="pl-4">
                <!-- Structured Sprints -->
                <MudListItem>
                    <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="1">
                        <MudIcon Icon="@Icons.Material.Filled.DirectionsRun" Color="Color.Primary" />
                        <MudText Typo="Typo.body1">
                            <strong>Structured Sprints:</strong> Scrum is organized around fixed-length sprints with defined roles and ceremonies.
                        </MudText>
                    </MudStack>
                </MudListItem>
                <!-- Strengths -->
                <MudListItem>
                    <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="1">
                        <MudIcon Icon="@Icons.Material.Filled.ThumbUp" Color="Color.Success" />
                        <MudText Typo="Typo.body1"><strong>Strengths:</strong></MudText>
                    </MudStack>
                    <MudList T="string" Class="pl-4">
                        <MudListItem>
                            <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="1">
                                <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Color="Color.Success" />
                                <MudText Typo="Typo.body2">Clearly defined roles and responsibilities</MudText>
                            </MudStack>
                        </MudListItem>
                        <MudListItem>
                            <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="1">
                                <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Color="Color.Success" />
                                <MudText Typo="Typo.body2">Regular cadence promotes predictability</MudText>
                            </MudStack>
                        </MudListItem>
                        <MudListItem>
                            <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="1">
                                <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Color="Color.Success" />
                                <MudText Typo="Typo.body2">Structured framework offers guidance</MudText>
                            </MudStack>
                        </MudListItem>
                    </MudList>
                </MudListItem>
                <!-- Weaknesses -->
                <MudListItem>
                    <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="1">
                        <MudIcon Icon="@Icons.Material.Filled.Warning" Color="Color.Warning" />
                        <MudText Typo="Typo.body1"><strong>Weaknesses:</strong></MudText>
                    </MudStack>
                    <MudList T="string" Class="pl-4">
                        <MudListItem>
                            <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="1">
                                <MudIcon Icon="@Icons.Material.Filled.Error" Color="Color.Error" />
                                <MudText Typo="Typo.body2">Can be rigid if not implemented flexibly</MudText>
                            </MudStack>
                        </MudListItem>
                        <MudListItem>
                            <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="1">
                                <MudIcon Icon="@Icons.Material.Filled.Error" Color="Color.Error" />
                                <MudText Typo="Typo.body2">Fixed sprints may not suit all work types</MudText>
                            </MudStack>
                        </MudListItem>
                        <MudListItem>
                            <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="1">
                                <MudIcon Icon="@Icons.Material.Filled.Error" Color="Color.Error" />
                                <MudText Typo="Typo.body2">Requires experienced and committed team members</MudText>
                            </MudStack>
                        </MudListItem>
                    </MudList>
                </MudListItem>
                <!-- Ideal Use Cases -->
                <MudListItem>
                    <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="1">
                        <MudIcon Icon="@Icons.Material.Filled.Lightbulb" Color="Color.Info" />
                        <MudText Typo="Typo.body1"><strong>Insights:</strong></MudText>
                    </MudStack>
                    <MudList T="string" Class="pl-4">
                        <!-- Ideal Use Cases -->
                        <MudListItem>
                            <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="1">
                                <MudText Typo="Typo.body2">
                                    <strong>Ideal Use Cases:</strong> Teams working on complex projects with defined scopes and regular delivery cycles. Examples: Software product development.
                                </MudText>
                            </MudStack>
                        </MudListItem>
                        <!-- Real-World Scenarios -->
                        <MudListItem>
                            <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="1">
                                <MudText Typo="Typo.body2">
                                    <strong>Real-World Scenarios:</strong> A software team building a new mobile application can use Scrum to break down the project into manageable sprints, deliver working features regularly, and adapt to changing requirements based on user feedback.
                                </MudText>
                            </MudStack>
                        </MudListItem>
                    </MudList>
                </MudListItem>
            </MudList>
        </MudItem>

        <!-- Kanban Column -->
        <MudItem xs="12" md="6">
            <MudText Typo="Typo.h5" Class="mb-2">Kanban Methodology</MudText>
            <MudList T="string" Class="pl-4">
                <!-- Continuous Flow -->
                <MudListItem>
                    <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="1">
                        <MudIcon Icon="@Icons.Material.Filled.ViewKanban" Color="Color.Primary" />
                        <MudText Typo="Typo.body1">
                            <strong>Continuous Flow:</strong> Kanban focuses on visualizing workflow and managing work-in-progress (WIP) to optimize the flow.
                        </MudText>
                    </MudStack>
                </MudListItem>
                <!-- Strengths -->
                <MudListItem>
                    <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="1">
                        <MudIcon Icon="@Icons.Material.Filled.ThumbUp" Color="Color.Success" />
                        <MudText Typo="Typo.body1"><strong>Strengths:</strong></MudText>
                    </MudStack>
                    <MudList T="string" Class="pl-4">
                        <MudListItem>
                            <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="1">
                                <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Color="Color.Success" />
                                <MudText Typo="Typo.body2">Flexibility to adapt to changing priorities</MudText>
                            </MudStack>
                        </MudListItem>
                        <MudListItem>
                            <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="1">
                                <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Color="Color.Success" />
                                <MudText Typo="Typo.body2">Visualizes workflow and bottlenecks</MudText>
                            </MudStack>
                        </MudListItem>
                        <MudListItem>
                            <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="1">
                                <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Color="Color.Success" />
                                <MudText Typo="Typo.body2">Focus on continuous improvement</MudText>
                            </MudStack>
                        </MudListItem>
                    </MudList>
                </MudListItem>
                <!-- Weaknesses -->
                <MudListItem>
                    <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="1">
                        <MudIcon Icon="@Icons.Material.Filled.Warning" Color="Color.Warning" />
                        <MudText Typo="Typo.body1"><strong>Weaknesses:</strong></MudText>
                    </MudStack>
                    <MudList T="string" Class="pl-4">
                        <MudListItem>
                            <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="1">
                                <MudIcon Icon="@Icons.Material.Filled.Error" Color="Color.Error" />
                                <MudText Typo="Typo.body2">Lack of defined structure can be challenging</MudText>
                            </MudStack>
                        </MudListItem>
                        <MudListItem>
                            <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="1">
                                <MudIcon Icon="@Icons.Material.Filled.Error" Color="Color.Error" />
                                <MudText Typo="Typo.body2">Requires discipline to manage WIP limits</MudText>
                            </MudStack>
                        </MudListItem>
                        <MudListItem>
                            <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="1">
                                <MudIcon Icon="@Icons.Material.Filled.Error" Color="Color.Error" />
                                <MudText Typo="Typo.body2">May not provide enough predictability</MudText>
                            </MudStack>
                        </MudListItem>
                    </MudList>
                </MudListItem>
                <!-- Ideal Use Cases -->
                <MudListItem>
                    <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="1">
                        <MudIcon Icon="@Icons.Material.Filled.Lightbulb" Color="Color.Info" />
                        <MudText Typo="Typo.body1"><strong>Insights:</strong></MudText>
                    </MudStack>
                    <MudList T="string" Class="pl-4">
                        <!-- Ideal Use Cases -->
                        <MudListItem>
                            <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="1">
                                <MudText Typo="Typo.body2">
                                    <strong>Ideal Use Cases:</strong> Teams working on complex projects with defined scopes and regular delivery cycles. Examples: Software product development.
                                </MudText>
                            </MudStack>
                        </MudListItem>
                        <!-- Real-World Scenarios -->
                        <MudListItem>
                            <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="1">
                                <MudText Typo="Typo.body2">
                                    <strong>Real-World Scenarios:</strong> A software team building a new mobile application can use Scrum to break down the project into manageable sprints, deliver working features regularly, and adapt to changing requirements based on user feedback.
                                </MudText>
                            </MudStack>
                        </MudListItem>
                    </MudList>
                </MudListItem>

            </MudList>
        </MudItem>
    </MudGrid>

    <!-- Leveraging Tools -->
    <MudText Typo="Typo.h5" Class="mt-4">Leveraging Tools for Agile Frameworks</MudText>
    <MudText Typo="Typo.body1" Class="mb-4">
        Tools like Jira Software can help teams implement and manage Agile frameworks like Scrum and Kanban. By using features like Scrum and Kanban boards, teams can tailor these frameworks to their specific workflows, enhancing their ability to deliver value effectively.
    </MudText>
</MudPaper>

@code {
    private List<BreadcrumbItem> _breadcrumbItems = new List<BreadcrumbItem>
    {
        new BreadcrumbItem("Home", href: "/"),
        new BreadcrumbItem("Wiki", href: "/wiki"),
        new BreadcrumbItem("Scrum vs. Kanban", href: null, disabled: true)
    };
}
