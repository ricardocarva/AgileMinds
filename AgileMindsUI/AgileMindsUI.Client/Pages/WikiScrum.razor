@page "/wiki/scrum"

@inject NavigationManager Navigation
@inject ISnackbar Snackbar

<MudPaper Class="px-6 py-4 ma-2" Elevation="4">
    <MudBreadcrumbs Items="_breadcrumbItems" Class="mb-4">
        <ItemTemplate Context="item">
            <MudLink Href="@item.Href" Disabled="@item.Disabled">@item.Text.ToUpper()</MudLink>
        </ItemTemplate>
    </MudBreadcrumbs>

    <MudStack Spacing="1">
        <!-- Header with Icon -->
        <MudText Typo="Typo.h3" Color="Color.Primary" Class="mb-2" Style="display: flex; align-items: center;">
            Leveraging Tools for Agile Frameworks
        </MudText>
        <!-- Subtitle -->
        <MudText Typo="Typo.subtitle1" Class="mb-4">
            Tools like Jira Software can help teams implement and manage Agile frameworks like Scrum and Kanban.
        </MudText>
    </MudStack>


    <MudItem xs="12" md="9">
        <!-- Main Content with Icons and Styling -->
        <MudPaper Class="p-4 mt-4">
            <MudStack Spacing="2">
                <!-- Header Section -->
                <MudText Typo="Typo.h4" Class="mb-3">
                    <MudIcon Icon="@Icons.Material.Filled.PlaylistPlay" Class="mr-2" Color="Color.Primary" />
                    Scrum Framework Overview
                </MudText>
                <MudText Typo="Typo.body1" Class="mb-4">
                    Scrum is an agile framework designed to help teams work together to develop, deliver, and sustain complex products. It emphasizes flexibility, collaboration, and continuous improvement through iterative development cycles called Sprints.
                </MudText>

                <!-- Scrum Process Section -->
                <MudDivider />
                <MudText Typo="Typo.h5" Class="mt-4">
                    <MudIcon Icon="@Icons.Material.Filled.Build" Class="mr-2" Color="Color.Secondary" />
                    The Scrum Process
                </MudText>
                <MudList T="string" Class="pl-4">
                    <MudListItem>
                        <MudStack Row="true" Spacing="1" AlignItems="AlignItems.Center">
                            <MudIcon Icon="@Icons.Material.Filled.PersonAdd" Color="Color.Primary" />
                            <MudText Typo="Typo.body2">Initial Setup: Form teams, define the backlog, and plan the first sprint.</MudText>
                        </MudStack>
                    </MudListItem>
                    <MudListItem>
                        <MudStack Row="true" Spacing="1" AlignItems="AlignItems.Center">
                            <MudIcon Icon="@Icons.Material.Filled.Loop" Color="Color.Info" />
                            <MudText Typo="Typo.body2">Sprint Cycles: Conduct planning, daily scrums, reviews, and retrospectives.</MudText>
                        </MudStack>
                    </MudListItem>
                    <MudListItem>
                        <MudStack Row="true" Spacing="1" AlignItems="AlignItems.Center">
                            <MudIcon Icon="@Icons.Material.Filled.DoneAll" Color="Color.Warning" />
                            <MudText Typo="Typo.body2">Project Closure: Finalize deliverables and capture lessons learned.</MudText>
                        </MudStack>
                    </MudListItem>
                </MudList>

                <!-- Scrum Roles Section -->
                <MudDivider />
                <MudText Typo="Typo.h5" Class="mt-4">
                    <MudIcon Icon="@Icons.Material.Filled.PeopleAlt" Class="mr-2" Color="Color.Info" />
                    Scrum Roles
                </MudText>
                <MudList T="string" Class="pl-4">
                    <MudListItem>
                        <MudStack Row="true" Spacing="1" AlignItems="AlignItems.Center">
                            <MudIcon Icon="@Icons.Material.Filled.Person" Color="Color.Primary" />
                            <MudText Typo="Typo.body2">Developers: Create usable Increments each Sprint.</MudText>
                        </MudStack>
                    </MudListItem>
                    <MudListItem>
                        <MudStack Row="true" Spacing="1" AlignItems="AlignItems.Center">
                            <MudIcon Icon="@Icons.Material.Filled.ManageAccounts" Color="Color.Warning" />
                            <MudText Typo="Typo.body2">Product Owner: Maximizes product value and manages the backlog.</MudText>
                        </MudStack>
                    </MudListItem>
                    <MudListItem>
                        <MudStack Row="true" Spacing="1" AlignItems="AlignItems.Center">
                            <MudIcon Icon="@Icons.Material.Filled.SupportAgent" Color="Color.Secondary" />
                            <MudText Typo="Typo.body2">Scrum Master: Ensures Scrum practices and removes impediments.</MudText>
                        </MudStack>
                    </MudListItem>
                </MudList>

                <!-- Scrum Values Section -->
                <MudDivider />
                <MudText Typo="Typo.h5" Class="mt-4">
                    <MudIcon Icon="@Icons.Material.Filled.Star" Class="mr-2" Color="Color.Warning" />
                    Scrum Values
                </MudText>
                <MudList T="string" Class="pl-4">
                    <MudListItem>
                        <MudStack Row="true" Spacing="1" AlignItems="AlignItems.Center">
                            <MudIcon Icon="@Icons.Material.Filled.CheckCircle" Color="Color.Success" />
                            <MudText Typo="Typo.body2">Commitment: Team members are dedicated to achieving goals.</MudText>
                        </MudStack>
                    </MudListItem>
                    <MudListItem>
                        <MudStack Row="true" Spacing="1" AlignItems="AlignItems.Center">
                            <MudIcon Icon="@Icons.Material.Filled.FilterCenterFocus" Color="Color.Info" />
                            <MudText Typo="Typo.body2">Focus: Everyone concentrates on the work of the Sprint.</MudText>
                        </MudStack>
                    </MudListItem>
                    <MudListItem>
                        <MudStack Row="true" Spacing="1" AlignItems="AlignItems.Center">
                            <MudIcon Icon="@Icons.Material.Filled.Visibility" Color="Color.Primary" />
                            <MudText Typo="Typo.body2">Openness: The team is transparent about work and challenges.</MudText>
                        </MudStack>
                    </MudListItem>
                    <MudListItem>
                        <MudStack Row="true" Spacing="1" AlignItems="AlignItems.Center">
                            <MudIcon Icon="@Icons.Material.Filled.EmojiPeople" Color="Color.Warning" />
                            <MudText Typo="Typo.body2">Respect: Team members value each other's contributions.</MudText>
                        </MudStack>
                    </MudListItem>
                    <MudListItem>
                        <MudStack Row="true" Spacing="1" AlignItems="AlignItems.Center">
                            <MudIcon Icon="@Icons.Material.Filled.ThumbUp" Color="Color.Success" />
                            <MudText Typo="Typo.body2">Courage: The team takes on challenges and does the right thing.</MudText>
                        </MudStack>
                    </MudListItem>
                </MudList>

                <!-- Best Practices Section -->
                <MudDivider />
                <MudText Typo="Typo.h5" Class="mt-4">
                    <MudIcon Icon="@Icons.Material.Filled.TipsAndUpdates" Class="mr-2" Color="Color.Success" />
                    Best Practices for Success
                </MudText>
                <MudList T="string" Class="pl-4">
                    <MudListItem>
                        <MudStack Row="true" Spacing="1" AlignItems="AlignItems.Center">
                            <MudIcon Icon="@Icons.Material.Filled.Task" Color="Color.Primary" />
                            <MudText Typo="Typo.body2">Maintain a prioritized Product Backlog.</MudText>
                        </MudStack>
                    </MudListItem>
                    <MudListItem>
                        <MudStack Row="true" Spacing="1" AlignItems="AlignItems.Center">
                            <MudIcon Icon="@Icons.Material.Filled.Layers" Color="Color.Info" />
                            <MudText Typo="Typo.body2">Decompose work into manageable tasks.</MudText>
                        </MudStack>
                    </MudListItem>
                    <MudListItem>
                        <MudStack Row="true" Spacing="1" AlignItems="AlignItems.Center">
                            <MudIcon Icon="@Icons.Material.Filled.Done" Color="Color.Warning" />
                            <MudText Typo="Typo.body2">Define "Done" clearly to ensure consistency.</MudText>
                        </MudStack>
                    </MudListItem>
                    <MudListItem>
                        <MudStack Row="true" Spacing="1" AlignItems="AlignItems.Center">
                            <MudIcon Icon="@Icons.Material.Filled.Timeline" Color="Color.Primary" />
                            <MudText Typo="Typo.body2">Visualize progress using Scrum boards.</MudText>
                        </MudStack>
                    </MudListItem>
                    <MudListItem>
                        <MudStack Row="true" Spacing="1" AlignItems="AlignItems.Center">
                            <MudIcon Icon="@Icons.Material.Filled.Refresh" Color="Color.Secondary" />
                            <MudText Typo="Typo.body2">Regularly inspect and adapt to refine processes.</MudText>
                        </MudStack>
                    </MudListItem>
                </MudList>
            </MudStack>
        </MudPaper>
    </MudItem>

</MudPaper>

