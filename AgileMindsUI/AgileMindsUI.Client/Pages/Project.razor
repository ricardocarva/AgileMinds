    [Parameter]
    public AgileMinds.Shared.Models.Project? project { get; set; } = new AgileMinds.Shared.Models.Project();
    private List<AgileMinds.Shared.Models.Task> tasks = new List<AgileMinds.Shared.Models.Task>();
    private List<AgileMinds.Shared.Models.Task> tasksInSprint = new List<AgileMinds.Shared.Models.Task>();
    private List<AgileMinds.Shared.Models.Task> tasksNotOnSprint = new List<AgileMinds.Shared.Models.Task>();

    private List<AgileMinds.Shared.Models.User> members = new List<AgileMinds.Shared.Models.User>();
    private List<AgileMinds.Shared.Models.Sprint> sprints = new List<AgileMinds.Shared.Models.Sprint>();
    private bool loading { get; set; } = false;
    private bool loadingTasks { get; set; } = false;
    private int userID { get; set; }
    private string sprintName  = string.Empty;
    private AgileMinds.Shared.Models.Sprint? OpenSprint { get; set; }

    protected override async Task OnInitializedAsync()
    {
        if (ProjectService == null || Http == null)
        {
            Snackbar.Add("Error: Services are not initialized.", Severity.Error);
            return;
        }

        loading = true;
        userID = await GetCurrentUserId();
        project = await ProjectService.FetchProjectById(ProjectId);

        if (project == null)
        {
            Snackbar.Add("Project not found.", Severity.Error);
            return;
        }

        // Start fetching tasks, members, and sprints simultaneously
        var loadTasks = LoadTasks();
        var loadMembers = LoadMembers();
        var loadOpenSprint = LoadOpenSprint(ProjectId);

        await Task.WhenAll(loadTasks, loadMembers, loadOpenSprint);
        loading = false;
        Console.WriteLine($"Project page OpenSprint Name: {OpenSprint?.Name}");

        StateHasChanged();
    }

    private async Task LoadTasks()
    {
        try
        {
            tasks = await Http.GetFromJsonAsync<List<AgileMinds.Shared.Models.Task>>($"api/projects/{ProjectId}/tasks");
            UpdateTaskLists();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error loading tasks: {ex.Message}", Severity.Error);
        }
    }

    private void UpdateTaskLists()
    {
        if (OpenSprint != null)
        {
            tasksInSprint = tasks.Where(t => t.SprintId == OpenSprint.Id).ToList();
            tasksNotOnSprint = tasks.Where(t => t.SprintId == null || t.SprintId != OpenSprint.Id).ToList();
        }
        else
        {
            tasksInSprint = new List<AgileMinds.Shared.Models.Task>();
            tasksNotOnSprint = tasks.ToList();
        }
    }
    private void HandleTaskAdded(AgileMinds.Shared.Models.Task newTask)
    {
        tasks.Add(newTask);
        UpdateTaskLists();
        StateHasChanged();
    }

    private async Task<int> GetCurrentUserId()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;
        var userIdClaim = user.FindFirst(claim => claim.Type == "userid");
        return int.Parse(userIdClaim?.Value ?? "0");
    }
    private async Task ReloadTasks(bool taskAdded = true)
    {
        try
        {
            loadingTasks = true;

            // Reload the tasks from the server or wherever they are stored
            await LoadTasks();

            // // If a task was added, invoke the OnTaskAdded callback if it has a delegate
