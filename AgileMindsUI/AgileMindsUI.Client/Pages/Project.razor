    private async Task ReloadSprints(bool sprintAdded = true)
    {
        if (sprintAdded)
        {
            await LoadSprints();
        }
        else
        {
            StateHasChanged();
        }
    }
    public async void OnItemDropped(MudItemDropInfo<AgileMinds.Shared.Models.Task> dropItem)
    {
        var task = dropItem.Item;
        var newZone = dropItem.DropzoneIdentifier;

        if (newZone == "InSprint")
        {
            // Move task to sprint
            task.SprintId = OpenSprint?.Id;
            tasksNotOnSprint.Remove(task);
            tasksInSprint.Add(task);
        }
        else if (newZone == "NotOnSprint")
        {
            // Remove task from sprint
            task.SprintId = null;
            tasksInSprint.Remove(task);
            tasksNotOnSprint.Add(task);
        }

        // Update task in backend
        await UpdateTask(task);
        StateHasChanged();
    }

    private async Task UpdateTask(AgileMinds.Shared.Models.Task task)
    {
        try
        {
            var response = await Http.PutAsJsonAsync($"api/projects/{ProjectId}/tasks/{task.Id}", task);
            if (!response.IsSuccessStatusCode)
            {
                Snackbar.Add("Failed to update task.", Severity.Error);
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error updating task: {ex.Message}", Severity.Error);
        }
    }


