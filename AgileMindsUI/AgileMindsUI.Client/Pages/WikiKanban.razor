@page "/wiki/kanban"

@inject NavigationManager Navigation
@inject ISnackbar Snackbar

<MudPaper Class="px-6 py-4 ma-2" Elevation="4">
    <MudBreadcrumbs Items="_breadcrumbItems" Class="mb-4">
        <ItemTemplate Context="item">
            <MudLink Href="@item.Href" Disabled="@item.Disabled">@item.Text.ToUpper()</MudLink>
        </ItemTemplate>
    </MudBreadcrumbs>

    <MudStack Spacing="1">
        <!-- Header with Icon -->
        <MudText Typo="Typo.h3" Color="Color.Primary" Class="mb-2" Style="display: flex; align-items: center;">
            Kanban
        </MudText>
    </MudStack>


    <MudItem xs="12" md="9">
        <!-- Main Content with Icons and Styling -->
        <MudPaper Class="p-4 mt-4">
            <MudStack Spacing="2">
                <!-- Header Section -->
                <MudText Typo="Typo.h4" Class="mb-3">
                    <MudIcon Icon="@Icons.Material.Filled.ViewKanban" Class="mr-2" Color="Color.Primary" />
                    Understanding Kanban Boards
                </MudText>
                <MudText Typo="Typo.body1" Class="mb-4">
                    A Kanban board is a visual tool used to manage and optimize workflow. It displays work items as cards moving across columns that represent stages in a workflow, such as "To Do," "In Progress," "In Review," and "Done." This visual representation helps teams track progress, identify bottlenecks, and maintain a shared understanding of the project status.
                </MudText>
                <div class="d-flex justify-center">
                    <MudImage ObjectPosition="ObjectPosition.Center" Src="images/kanban-board.png" Alt="Kanban Board Example" Class="mb-4" Width="694" />
                </div>

                <!-- Supporting Agile Development Section -->
                <MudDivider />
                <MudText Typo="Typo.h5" Class="mt-4">
                    <MudIcon Icon="@Icons.Material.Filled.Support" Class="mr-2" Color="Color.Secondary" />
                    Supporting Agile Development
                </MudText>
                <MudText Typo="Typo.body1" Class="mb-4">
                    Kanban boards align with Agile principles by visualizing the flow of work, promoting transparency, and enabling teams to adapt to changes quickly. This iterative process supports Agile's emphasis on flexibility and responsiveness.
                </MudText>

                <!-- Benefits Section -->
                <MudDivider />
                <MudText Typo="Typo.h5" Class="mt-4">
                    <MudIcon Icon="@Icons.Material.Filled.ThumbUp" Class="mr-2" Color="Color.Success" />
                    Benefits of Kanban Boards
                </MudText>
                <MudList T="string" Class="pl-4">
                    <MudListItem>
                        <MudStack Row="true" Spacing="1" AlignItems="AlignItems.Center">
                            <MudIcon Icon="@Icons.Material.Filled.Visibility" Color="Color.Primary" />
                            <MudText Typo="Typo.body2">Visualizing Workflow: Provides a clear view of work progress and helps identify bottlenecks.</MudText>
                        </MudStack>
                    </MudListItem>
                    <MudListItem>
                        <MudStack Row="true" Spacing="1" AlignItems="AlignItems.Center">
                            <MudIcon Icon="@Icons.Material.Filled.Timeline" Color="Color.Info" />
                            <MudText Typo="Typo.body2">WIP Limits: Encourages teams to finish work before starting new tasks, improving flow.</MudText>
                        </MudStack>
                    </MudListItem>
                    <MudListItem>
                        <MudStack Row="true" Spacing="1" AlignItems="AlignItems.Center">
                            <MudIcon Icon="@Icons.Material.Filled.People" Color="Color.Warning" />
                            <MudText Typo="Typo.body2">Improved Team Productivity: Enhances team communication and collaboration, resulting in better efficiency.</MudText>
                        </MudStack>
                    </MudListItem>
                    <MudListItem>
                        <MudStack Row="true" Spacing="1" AlignItems="AlignItems.Center">
                            <MudIcon Icon="@Icons.Material.Filled.Speed" Color="Color.Success" />
                            <MudText Typo="Typo.body2">Continuous Delivery: Supports frequent, reliable software releases by optimizing workflow and removing bottlenecks.</MudText>
                        </MudStack>
                    </MudListItem>
                </MudList>

                <!-- Use Cases Section -->
                <MudDivider />
                <MudText Typo="Typo.h5" Class="mt-4">
                    <MudIcon Icon="@Icons.Material.Filled.BuildCircle" Class="mr-2" Color="Color.Tertiary" />
                    Use Cases for Kanban Boards
                </MudText>
                <MudText Typo="Typo.body1" Class="mb-4">
                    Organizations use Kanban boards for a variety of purposes, from software development to IT services. Tools like Jira Software offer customizable Kanban boards to reflect unique workflows, manage WIP, and gain insights into process optimization.
                </MudText>
            </MudStack>
        </MudPaper>
    </MudItem>

</MudPaper>

@code {

    private readonly Dictionary<string, string> pages = new()
    {
        { "Agile Manifesto", "/wiki/agile-manifesto" },
        { "Scrum", "/wiki/scrum" },
        { "Kanban", "/wiki/kanban" },
        { "Methodology Comparisons", "/wiki/methodology-comparisons" },
        { "SmartSprint Content", "/wiki/smart-sprint-overview" }
    };

    private readonly Dictionary<string, string> pageDescriptions = new()
    {
        { "Agile Manifesto", "Discover the values and principles that define Agile software development." },
        { "Scrum", "Learn about Scrum roles, events, and artifacts to effectively manage projects." },
        { "Kanban", "Explore how Kanban helps visualize workflow and optimize processes." },
        { "Methodology Comparisons", "Compare Agile methodologies like Scrum, Kanban, XP, and more." },
        { "SmartSprint Content", "Find project-specific information and how Agile is being applied here at SmartSprint." }
    };

    private void NavigateToPage(string url) => Navigation.NavigateTo(url);

    private List<BreadcrumbItem> _breadcrumbItems = new List<BreadcrumbItem>
    {
        new BreadcrumbItem("Home", href: "/"),
        new BreadcrumbItem("Wiki", href: "/wiki"),
        new BreadcrumbItem("Kanban", href: null, disabled: true)
    };
}
